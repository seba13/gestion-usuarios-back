{
    "root": true,
    "env": {
      "es6": true,
      "browser": true,
      "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      // "quotes": [2, "single"]
      // "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
      // ,
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "endOfLine": "auto",
          "useTabs": false
        }
      ]
     }
  }